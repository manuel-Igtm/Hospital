# Django Settings
DJANGO_SECRET_KEY=change-this-to-a-random-50-character-string-in-production
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.dev
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://hospital_user:hospital_pass@postgres:5432/hospital_db

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Hospital-Specific Settings
ENABLE_C_MODULES=True
PII_ENCRYPTION_KEY=
AUDIT_LOG_RETENTION_DAYS=2555
MAX_APPOINTMENT_FUTURE_DAYS=90

# M-Pesa Integration (Safaricom Daraja API)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=174379
MPESA_PASSKEY=
MPESA_CALLBACK_URL=https://your-domain.com/api/v1/billing/mpesa/callback/
MPESA_ENVIRONMENT=sandbox

# Security Settings
SECURITY_LOG_REQUESTS=True
SECURITY_REQUEST_LOG_RETENTION_DAYS=90

# Logging
LOG_LEVEL=INFO

# Email (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@hospital.example.com

# Sentry (optional, for production)
SENTRY_DSN=

# Admin URL (customize for security in production)
ADMIN_URL=admin/

# PostgreSQL specific (for docker-compose)
POSTGRES_DB=hospital_db
POSTGRES_USER=hospital_user
POSTGRES_PASSWORD=hospital_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# PgAdmin (for development)
PGADMIN_DEFAULT_EMAIL=admin@hospital.local
PGADMIN_DEFAULT_PASSWORD=admin
